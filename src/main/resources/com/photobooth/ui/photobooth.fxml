<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<SplitPane fx:id="splitPane" dividerPositions="0.25" maxHeight="Infinity" maxWidth="Infinity" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.photobooth.ui.PhotoBoothController">
    <items>
        <VBox spacing="10.0" style="-fx-background-color: #f4f4f4;">
            <children>
                <VBox style="-fx-border-color: #cccccc; -fx-border-width: 0 0 1 0; -fx-padding: 10;">
                    <children>
                        <Label text="Setup" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <GridPane hgap="5.0" vgap="8.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" prefWidth="80.0" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                            <children>
                                <Label text="Import:" />
                                <HBox GridPane.columnIndex="1">
                                    <TextField fx:id="importFolderField" HBox.hgrow="ALWAYS" />
                                    <Button fx:id="selectImportButton" onAction="#handleSelectImport" text="..."/>
                                </HBox>

                                <Label text="Export:" GridPane.rowIndex="1" />
                                <HBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <TextField fx:id="exportFolderField" HBox.hgrow="ALWAYS" />
                                    <Button fx:id="selectExportButton" onAction="#handleSelectExport" text="..."/>
                                </HBox>

                                <Label text="Preset:" GridPane.rowIndex="2" />
                                <HBox GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    <TextField fx:id="presetField" HBox.hgrow="ALWAYS" />
                                    <Button fx:id="selectPresetButton" onAction="#handleSelectPreset" text="..."/>
                                </HBox>

                                <Label text="Frame:" GridPane.rowIndex="3" />
                                <HBox GridPane.columnIndex="1" GridPane.rowIndex="3">
                                    <TextField fx:id="psdFrameField" HBox.hgrow="ALWAYS" />
                                    <Button fx:id="selectPsdButton" onAction="#handleSelectPsd" text="..."/>
                                </HBox>
                            </children>
                            <padding><Insets top="10.0" /></padding>
                        </GridPane>
                    </children>
                </VBox>

                <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <Label text="Available Images" style="-fx-font-weight: bold;"/>
                            <Button fx:id="selectImageButton" text="Add Images" onAction="#handleSelectImage" />
                        </HBox>
                        <ListView fx:id="imageGrid" VBox.vgrow="ALWAYS" />
                        <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 5 0 0 0;">
                            <Button fx:id="startStopButton" text="Start Watching" onAction="#handleStartStop" />
                            <Label fx:id="statusLabel" text="Status: Ready" wrapText="true" />
                        </HBox>
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Label text="Saved Configurations" style="-fx-font-weight: bold;" />
                        <ListView fx:id="configListView" prefHeight="150.0" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>

        <BorderPane>
            <center>
                <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" pannable="true" BorderPane.alignment="CENTER">
                    <content>
                        <Pane fx:id="templatePane" style="-fx-background-color: #e0e0e0;">
                            <children>
                                <Pane fx:id="overlayPane" />
                                <ImageView fx:id="templateImageView" pickOnBounds="false" />
                            </children>
                        </Pane>
                    </content>
                </ScrollPane>
            </center>

            <bottom>
                <VBox spacing="10.0" alignment="CENTER" style="-fx-background-color: #f4f4f4; -fx-padding: 10; -fx-border-color: #cccccc; -fx-border-width: 1 0 0 0;">
                    <HBox alignment="CENTER" spacing="10.0">
                        <Label text="Zoom:" />
                        <Button fx:id="zoomOutButton" text="-" onAction="#handleZoomOut" />
                        <Slider fx:id="zoomSlider" max="2.0" min="0.1" value="0.5" HBox.hgrow="ALWAYS" />
                        <Button fx:id="zoomInButton" text="+" onAction="#handleZoomIn" />
                        <Button fx:id="toggleFrameVisibilityButton" onAction="#handleToggleFrameVisibility" />
                        <Button fx:id="clearCanvasButton" text="Clear" onAction="#handleClearCanvas" />
                    </HBox>
                    <GridPane hgap="10" vgap="5" fx:id="positionControls" managed="false" visible="false">
                        <columnConstraints><ColumnConstraints/><ColumnConstraints hgrow="ALWAYS"/></columnConstraints>
                        <rowConstraints><RowConstraints/><RowConstraints/></rowConstraints>
                        <Label text="X Position:"/>
                        <Slider fx:id="xPosSlider" GridPane.columnIndex="1"/>
                        <Label text="Y Position:" GridPane.rowIndex="1"/>
                        <Slider fx:id="yPosSlider" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </GridPane>
                    <HBox alignment="CENTER" spacing="20.0">
                        <Button fx:id="saveConfigButton" text="Save Layout as Template" onAction="#handleSaveConfig" style="-fx-font-weight: bold;"/>
                        <Button fx:id="processImagesButton" text="Export Final Image" onAction="#handleProcessImages" style="-fx-font-weight: bold; -fx-base: #4CAF50;"/>
                    </HBox>
                </VBox>
            </bottom>
        </BorderPane>
    </items>
</SplitPane>